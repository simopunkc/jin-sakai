* {
    box-sizing: border-box;
    margin:0;
    padding:0;
    user-select: none;
}
html {
    background-color: #eee;
}
header {
    margin: 0 0 15px;
    padding: 20px;
    text-align: center;
    font-size: 18px;
    color: #555;
    text-decoration: underline;
    font-family: Georgia;
    font-style: italic;
}
header a, header a:visited{
    color: #555;
}
header a:hover{
    color: #222;
}
h1 {
    font-size: 20px;
    margin: 15px 0 25px;
    font-family: Georgia;
}
input:not([type='checkbox']):not([type='radio']),button,textarea{
    min-width: 44px;
    min-height: 44px;
    padding: 10px 10px;
    border: 1px solid #eee;
    outline: none;
}
input[type='checkbox'] {
    min-height: 16px;
    min-width: 16px;
    cursor: pointer;
    vertical-align: middle;
}
input:focus,textarea:focus {
    box-shadow: 0 0 10px 2px rgb(170 170 170 / 10%);
}
button{
    background-color: #777;
    cursor:pointer;
    color:#fff;
}
button:hover{
    background-color: #eee;
    color:#444;
}
footer {
    margin: 15px 0 0;
    padding: 20px;
    text-align: center;
}
body{
    background-color: #fff;
    margin: 50px auto;
    padding: 20px;
    max-width: 600px;
    font-family: Verdana;
    font-size: 13px;
    color: #333;
    border-radius: 4px;
    box-shadow: 0 2px 24px 3px rgb(0 0 0 / 20%);
}
a {
    text-decoration: none;
    color: dodgerblue;
    padding: 15px 0;
    min-width: 44px;
    min-height: 44px;
}
a:visited {
    color: cornflowerblue;
}
a:hover{
    color: steelblue;
}
table {
    border: 1px solid #eee;
    border-spacing: 0;
    vertical-align: middle;
    width: 100%;
    margin-bottom: 10px;
}
tr:nth-child(2n+1) {
    background-color: #FCFCE6;
}
tr:nth-child(2n+1) {
    background-color: #FCFCE6;
}
table td {
    border-top: 1px solid #E6E9ED;
    color: #333;
    padding: 5px 15px;
}
tr:nth-child(2n) {
    background-color: #FCFCF6;
}
table th {
    text-align: left;
    background-color: #fff;
    font-size: 12px;
    color: #444;
    padding: 10px 15px;
}
.error {
    background-color: lightgoldenrodyellow;
    padding: 10px;
    color: red;
    font-style: italic;
    border-radius: 5px;
    font-family: monospace;
}
.label-potrait {
    margin: 8px 0;
}