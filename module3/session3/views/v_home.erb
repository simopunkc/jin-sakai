<h1># Daftar Item</h1>
<table>
    <thead>
        <th>Name</th>
        <th>Price</th>
        <th>action</th>
        <th>action</th>
        <th>action</th>
    </thead>
    <tbody>
    <% items.each do |item| %>
    <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><a href="/items/<%= item.id %>" title="Tampilkan detail item">Show</a></td>
        <td><a href="/items/<%= item.id %>/edit" title="Edit item">Edit</a></td>
        <td><button type="button" onclick="konfirmasi_hapus('/items/<%= item.id %>/delete')">Delete</button></td>
    </tr>
    <% end %>
    </tbody>
</table>
<br/>
<button type="button" onclick="window.location.href='/items/new'">Tambah Item</button>
<button type="button" onclick="window.location.href='/category/'">Daftar kategori</button>